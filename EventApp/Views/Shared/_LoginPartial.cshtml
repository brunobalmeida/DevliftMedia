@using Microsoft.AspNetCore.Identity
@using EventApp.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index"
                  class="btn btn-outline-primary" title="Manage" style="padding:0.4em; margin-top:0.65em;">Hello @User.Identity.Name!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-outline-primary" style="margin-top:0.65em;">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-outline-primary" style="padding:0.4em; margin-top:0.65em;">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-outline-primary" style="padding:0.4em; margin-top:0.65em">Log in</a></li>
    </ul>
}
