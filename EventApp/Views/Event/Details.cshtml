@model EventApp.Models.Events
@{
    ViewData["Title"] = $"Details of: {Model.EventTitle}";
    var date = Model.EventDate.ToLongDateString();
}



<div class="container">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 text-center">
            <br /><br />
            <img src="@Model.GetPicture()" alt="Event Picture" width="500px" />
            <h3 class="text-primary font-weight-bold text-uppercase">@Model.EventTitle</h3>
            <div class="font-weight-bold">
                <p>@Model.EventDescription</p>
                <p>Date: @date</p>
                <p>Where: @Model.EventAddress</p>
                <br />
                <p>Contact: @Model.EventContact</p>
                <p>Event Link: <br /> <a href="@Model.EventLink" target="_blank" class="btn btn-outline-success">Click Here for more details.</a></p>
            </div>
            <br />
            <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>